{% extends 'pages_template.html.twig' %}

{% block page_title %}Добавление рейса{% endblock %}

{% block page_content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-5 mb-5">
                <div class="card-body">
                    <h5 class="card-title">Новый рейс</h5>
                    {{ form_start(form) }}
                        {{ form_row(form.name, {'attr': {'class': 'form-control mt-3'}}) }}
                        {{ form_row(form.departmentDate, {'attr': {'class': 'form-control mt-3'}}) }}
                        {{ form_row(form.train, {'attr': {'class': 'form-control mt-3'}}) }}
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-lg btn-dark mt-3'}}) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}