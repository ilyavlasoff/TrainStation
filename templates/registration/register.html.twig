{% extends 'pages_template.html.twig' %}

{% block title %}Register{% endblock %}

{% block page_title %}Регистрация{% endblock %}

{% block page_content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}

                        {{ form_start(registrationForm, {'attr': {'class': ''}}) }}
                        <div class="form-group">
                            <label for="exampleDropdownFormEmail2">Email</label>
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': "email@example.com"}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleDropdownFormPassword2">Пароль</label>
                            {{ form_widget(registrationForm.plainPassword, { attr: {'type': "password", 'class': "form-control", 'id': "exampleDropdownFormPassword2", 'placeholder': "Password"}}) }}
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': "form-check-input"}}) }}
                                <label class="form-check-label" for="dropdownCheck2">
                                    Согласие с условиями использования
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Регистрация</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
