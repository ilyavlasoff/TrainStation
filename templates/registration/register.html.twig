{% extends 'pages_template.html.twig' %}

{% block title %}Register{% endblock %}

{% block page_content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'dropdown-menu p-4'}}) }}
        <div class="form-group">
            <label for="exampleDropdownFormEmail2">Email address</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': "email@example.com"}}) }}
        </div>
        <div class="form-group">
            <label for="exampleDropdownFormPassword2">Password</label>
            {{ form_widget(registrationForm.plainPassword, { attr: {'type': "password", 'class': "form-control", 'id': "exampleDropdownFormPassword2", 'placeholder': "Password"}}) }}
        </div>
        <div class="form-group">
            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': "form-check-input"}}) }}
                <label class="form-check-label" for="dropdownCheck2">
                    Remember me
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
{{ form_end(registrationForm) }}
{% endblock %}
