{% extends 'pages_template.html.twig' %}

{% block page_title %}Заполните дополнительную информацию о себе{% endblock %}
{% block page_content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                {{ form_start(credentialsForm) }}
                {{ form_row(credentialsForm.name, {'label': 'Имя', 'attr': {'class': 'form-control'}}) }}
                {{ form_row(credentialsForm.surname, {'label': 'Фамилия', 'attr': {'class': 'form-control'}}) }}
                {{ form_row(credentialsForm.patronymic, {'label': 'Отчество', 'attr': {'class': 'form-control'}}) }}
                {{ form_row(credentialsForm.passportData, {'label': 'Паспортные данные', 'attr': {'class': 'form-control'}}) }}
                {{ form_row(credentialsForm.twoFactorAuthentication, {'label': 'Двухфакторная аутентификация', 'attr': {'class': 'form-check-label'}}) }}
                <div class="row justify-content-end mt-5 mb-5">
                    <button type="submit" class="btn btn-lg btn-dark">Продолжить</button>
                </div>
                {{ form_end(credentialsForm) }}
            </div>
        </div>
    </div>
{% endblock %}